<mapper namespace="com.example.myhealthblock.doctor.adapter.out.mybatis.DoctorEntity">

    <!-- Insert a new doctor -->
    <insert id="insertDoctor" parameterType="com.example.myhealthblock.doctor.adapter.out.persistence.DoctorEntity">
        INSERT INTO doctor (userId, name, field, hospital, introduction, createDate, lastEditDate)
        VALUES (#{userId}, #{name}, #{field}, #{hospital}, #{introduction}, #{createDate}, #{lastEditDate})
    </insert>

    <!-- Select a doctor by userId -->
    <select id="selectDoctorByUserId" parameterType="String" resultType="com.example.myhealthblock.doctor.adapter.out.persistence.DoctorEntity">
        SELECT * FROM doctor WHERE userId = #{userId}
    </select>

</mapper>